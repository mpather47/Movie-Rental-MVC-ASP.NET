@model Vidly_2.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
    Comment on multiple lines

*@
@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h1>Customers</h1>
@*
    <h2 class="popular">@Model.Movie.Name</h2>
*@

@if (Model.Customers.Count == 0)
{
    <p>No one has rented this movie before.</p>
}
else
{
    <table class="table">
        <tr><th>Customer</th></tr>

        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td> @Html.ActionLink(@customer.Name, "Retrieve", "Movies")</td>
            </tr>
        }

    </table>

}


